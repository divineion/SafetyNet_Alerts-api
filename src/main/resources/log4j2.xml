<?xml version="1.0" encoding="UTF-8"?>
<?xml-model href=""?>
<Configuration status="WARN">

    <Appenders>
        <Console name="Console" target="SYSTEM_OUT">
            <PatternLayout pattern="%d{yyyy-MM-dd HH:mm:ss} [%t] %-5level %logger{36} - %msg%n"/>
        </Console>
        
        <File name="APP_LOG" fileName="logs/app.log">
            <PatternLayout pattern="%d{yyyy-MM-dd HH:mm:ss} [%t] %-5level %logger{36} - %msg%n"/>
        </File>
        
        <File name="DEBUG_LOG" fileName="logs/debug.log"> 
            <PatternLayout pattern="%d{yyyy-MM-dd HH:mm:ss} [%t] %-5level %logger{36} - %msg%n"/>
   		</File>
   		
   		<File name="REQUESTS_LOG" fileName="logs/requests.log">
	        <PatternLayout pattern="%d{yyyy-MM-dd HH:mm:ss} [%t] %-5level %logger{36} - %msg%n"/>
   		</File>
    </Appenders>
    
    <Loggers>
    	<Root level="DEBUG">
    		<AppenderRef ref="Console"/>
    		<AppenderRef ref="DEBUG_LOG"/>
    	</Root>
    	<Logger name="com.safetynetalerts.safetynetalertsapi.services" level="INFO" additivity="true">
    		<AppenderRef ref="REQUESTS_LOG"/>
    	</Logger>
    	<Logger name="com.safetynetalerts.safetynetalertsapi" level="INFO" additivity="false">
    		<AppenderRef ref="APP_LOG"/>
    	</Logger>
    </Loggers>
</Configuration>